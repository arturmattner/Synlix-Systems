<section class="product">
  <%= link_to cpu.name, display_product_path(:type => cpu.type, :id => cpu.id), :class => "product-name" %>
  <div class="product-image">
    <%= image_tag "Cpu/Cpu_#{cpu.id}.jpg" %><br />
  </div>
  <section class="product-description">
    Details/Specifications:<br />
    Clock: <%= cpu.clock %><br />
    Cores: <%= cpu.cores %><br />
    Price: $<%= cpu.price %><br />
  </section>
</section>